<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@drawable/back_main"
                android:gravity="center"
                tools:context=".MainActivity" >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="46dp" app:srcCompat="@drawable/eyetool_logo_400px"
            android:layout_alignParentTop="true" android:id="@+id/imageView2"
            android:layout_marginTop="90dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:onClick="clickedOnLogo"
    />
    <Button
            android:text="Get started"
            android:textColor="#FFFFFF"
            android:background="@drawable/lightgreen_button_background"
            android:layout_width="208dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/button2" android:layout_marginBottom="100dp"
            android:onClick="jumpToNextScreen"/>
    <Button
            android:text="See saved PD"
            android:textColor="#FFFFFF"
            android:background="@drawable/lightgreen_button_background"
            android:layout_width="208dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/showResultsButton" android:layout_marginBottom="40dp"
            android:onClick="showResults"/>
    <TextView
            android:text="Welcome to EyeTool! With this app you can measure your pupillary distance quick and easy. Let's get started!"
            android:layout_width="311dp"
            android:layout_centerHorizontal="true"
            android:layout_height="94dp" android:layout_alignParentBottom="false" android:id="@+id/textView3"
            android:background="@drawable/rounded_textbox"
            android:gravity="center" android:layout_marginTop="170dp"/>
    <TextView
            android:text="v1.0 - Márkus Balázs - BME-AUT"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"/>

</RelativeLayout>